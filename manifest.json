{
    "name": "Diff Link Simplifier",
    "version": "1.0.0",
    "description": "Simplifies links to MediaWiki diffs.",
    "permissions": [
        "declarativeContent", // To gray out page action icon when not applicable
        "activeTab" // To extract data from the URL of the current tab
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2
}
